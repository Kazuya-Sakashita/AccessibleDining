


  <%= form_with model: @restaurant, local: true do |form| %>
  <div class="max-w-lg mx-auto bg-yellow-50 p-8 xl:max-w-xl">
    <%= form.label :photos, "画像", class: "text-sm font-medium text-yellow-700" %>
    <%= form.file_field :photos, multiple: true, name: "restaurant_for[restaurant_images][photos][]", include_hidden: false, accept: "image/jpeg,image/gif,image/png", data: { images_target: "select", action: "change->images#selectImages" }, class: "text-sm font-medium text-yellow-700" %>
  </div>
  <div class="max-w-lg mx-auto bg-yellow-50 p-8 xl:max-w-xl">
    <%= form.label :name, "店名", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :nearest_station, "最寄り駅", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :nearest_station, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :budget, "予算", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.number_field :budget, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :category, "カテゴリ", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :postal_code, "郵便番号", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :postal_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :address, "住所文字列", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :city, "市町村", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :district, "地区", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :district, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :latitude, "緯度", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :latitude, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :longitude, "経度", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :longitude, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :phone_number, "電話番号", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :phone_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :business_hours, "営業時間", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_field :business_hours, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>

    <%= form.label :description, "説明", class: "block text-sm font-medium text-yellow-700 mt-2" %>
    <%= form.text_area :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-yellow-500 focus:ring-yellow-500" %>


    <div class="flex items-center justify-between">
      <%= form.submit "登録する", class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold mt-2 py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
<% end %>
