<div class="container mx-auto px-4 py-4">
  <%= link_to '新規登録', new_restaurant_path, class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <div class="grid grid-cols-4 gap-4 mt-4">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant.id) do %>
        <div class="bg-yellow-100 border border-yellow-400 rounded-lg p-4">
          <% if restaurant.restaurant_images.any? && restaurant.restaurant_images.first.image.attached? %>
            <%= image_tag restaurant.restaurant_images.first.image, class: "w-full h-auto rounded-lg shadow-md object-cover" %>
          <% end %>
          <h2 class="font-bold text-lg my-2 text-yellow-800"><%= restaurant.name %></h2>
          <p class="text-yellow-700"><%= restaurant.description %></p>
          <p class="text-sm text-yellow-600">最寄り駅: <%= restaurant.nearest_station %></p>
          <p class="text-sm text-yellow-600">予算: <%= restaurant.budget %>円</p>
          <p class="text-sm text-yellow-600">カテゴリ: <%= restaurant.category %></p>
          <p class="text-sm text-yellow-600">住所: <%= restaurant.address %></p>
          <p class="text-sm text-yellow-600">市町村: <%= restaurant.city %></p>
          <p class="text-sm text-yellow-600">地区: <%= restaurant.district %></p>
          <p class="text-sm text-yellow-600">電話番号: <%= restaurant.phone_number %></p>
          <p class="text-sm text-yellow-600">営業時間: <%= restaurant.business_hours %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= paginate @restaurants %>
</div>
