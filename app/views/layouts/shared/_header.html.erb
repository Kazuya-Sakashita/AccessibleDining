<!-- app/views/layouts/_header.html.erb -->
<header class="bg-yellow-500 text-gray-800">
  <nav class="container mx-auto flex items-center justify-between px-6 py-4">
    <%= link_to 'FollowMeRails', root_path, class: "text-xl font-semibold text-gray-800" %>
    <ul class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <li><%= link_to 'ホーム', root_path, class: "hover:text-yellow-600 text-gray-800" %></li>
        <li><%= link_to 'レストラン一覧', restaurants_path, class: "hover:text-yellow-600 text-gray-800" %></li>
        <li><%= link_to 'アカウント編集', edit_user_registration_path, class: "hover:text-yellow-600 text-gray-800" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "ログアウトしてよろしいですか？" }, class: "hover:text-yellow-600 text-gray-800" %></li>
      <% else %>
        <li><%= link_to 'サインアップ', new_user_registration_path, class: "hover:text-yellow-600 text-gray-800" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "hover:text-yellow-600 text-gray-800" %></li>
        <li><%= link_to 'レストラン一覧', restaurants_path, class: "hover:text-yellow-600 text-gray-800" %></li>
      <% end %>
    </ul>
  </nav>
</header>
