<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next">
  <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, class: "px-3 py-1 text-yellow-600 hover:bg-yellow-500 hover:text-white border border-yellow-500 rounded transition duration-150 ease-in-out" %>
</span>
