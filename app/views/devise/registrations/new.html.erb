<div class="container mx-auto flex flex-row justify-center items-center">
  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">

      <h1 class="text-yellow-600">サインアップ画面</h1>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4 mt-4">
            <%= f.email_field :email, class: "form-control px-4 py-2 border border-yellow-400 rounded-md text-yellow-700", placeholder: "Eメール" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password, class: "form-control px-4 py-2 border border-yellow-400 rounded-md text-yellow-700", placeholder: "パスワード" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password_confirmation, class: "form-control px-4 py-2 border border-yellow-400 rounded-md text-yellow-700", placeholder: "パスワード確認" %>
          </div>

          <%= f.submit "サインアップ", class: "btn btn-primary w-full py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-md" %>
        <% end %>

        <% if notice %>
          <p class="notice text-yellow-600"><%= notice %></p>
        <% elsif alert %>
          <p class="alert text-red-600"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        既にアカウントを持っている？
        <%= link_to "サインイン", new_user_session_path, class: "fs-6 my-4 text-decoration-none text-yellow-500 hover:text-yellow-600" %>
      </div>
    </div>
  </div>
</div>
