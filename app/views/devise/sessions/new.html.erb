<div class="container mx-auto flex flex-row justify-center items-center">
  <div class="images-section pt-3 hidden lg:block"></div>

  <div class="login-section pt-3">
    <div class="card text-center pt-5 mx-auto" style="width: 23rem;">
      <h1 class="text-yellow-600">ログイン画面</h1>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4 mt-4">
            <%= f.email_field :email, class: "form-control px-4 py-2 border border-yellow-400 rounded-md text-yellow-700 focus:ring-yellow-500 focus:border-yellow-500", placeholder: " Eメール" %>
          </div>

          <div class="mb-4">
            <%= f.password_field :password, class: "form-control px-4 py-2 border border-yellow-400 rounded-md text-yellow-700 focus:ring-yellow-500 focus:border-yellow-500", placeholder: "パスワード" %>
          </div>

          <%= f.submit "ログイン", class: "btn btn-primary w-full py-2 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-md" %>
        <% end %>

        <% if notice %>
          <p class="notice text-yellow-600"><%= notice %></p>
        <% elsif alert %>
          <p class="alert text-red-600"><%= alert %></p>
        <% end %>

        <a href="#" class="fs-6 block my-4 text-decoration-none text-yellow-500 hover:text-yellow-600">パスワードを忘れた？</a>
      </div>
    </div>

    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        アカウントを持っていない？
        <%= link_to "サインアップ", new_user_registration_path, class: "fs-6 my-4 text-decoration-none text-yellow-500 hover:text-yellow-600" %>
      </div>
    </div>
  </div>
</div>
